programa {
  funcao inicio() {
    real n1, n2, n3, n4, media

    escreva("\nQual a 1° nota: \n")
    leia(n1)

    escreva("Qual a 2° nota: \n")
    leia(n2)

    escreva("Qual a 3° nota: \n")
    leia(n3)

    escreva("Qual a 4° nota: \n")
    leia(n4)

    media = (n1+n2+n3+n4)/4

    escreva("\nA média das notas é ",media,"\n")

  }
}
